{
  "name": "m3u8-downloader",
  "productName": "M3U8-Downloader",
  "version": "2.0.1",
  "description": "M3U8-Downloader，用于下载主流网站的视频和直播。",
  "main": "main.js",
  "dependencies": {
    "async": "^3.2.0",
    "crypto-js": "^4.0.0",
    "dateformat": "^3.0.3",
    "download": "^8.0.0",
    "electron-is-dev": "^1.2.0",
    "ffmpeg-static": "^4.2.5",
    "fluent-ffmpeg": "^2.1.2",
    "got": "^11.5.0",
    "http": "0.0.0",
    "https": "^1.0.0",
    "m3u8-parser": "^4.4.0",
    "nconf": "^0.10.0",
    "queue": "^6.0.1",
    "url": "^0.11.0",
    "winston": "^3.3.2"
  },
  "devDependencies": {
    "electron": "9.0.5",
    "electron-builder": "^22.7.0"
  },
  "scripts": {
    "start": "electron .",
    "pack-mac": "electron-builder --mac",
    "pack-win": "electron-builder --win",
    "postinstall": "electron-builder install-app-deps",
    "pack-linux": "electron-builder --linux",
    "windows-latest":"yarn pack-win",
    "macos-latest":"yarn pack-mac",
    "ubuntu-latest":"yarn pack-linux"
  },
  "build": {
    "appId": "cn.heisir.m3u8-downloader",
    "artifactName": "${productName}-${os}-${version}.${ext}",
    "electronVersion": "9.0.5",
    "copyright": "Copyright © year ${author}",
    "compression": "maximum",
    "directories": {
      "output": "../dist"
    },
    "files": [
      "**/*",
      "!node_modules/ffmpeg-static/ffmpeg.exe",
      "!node_modules/ffmpeg-static/ffmpeg",
      "!node_modules/ffmpeg-static/ffmpeg.ffmpeg"
    ],
    "asar": true,
    "win": {
      "target": [
        "nsis",
        "zip"
      ],
      "extraResources": [
        "node_modules/ffmpeg-static/ffmpeg.exe"
      ],
      "icon": "resource/icon/logo-512.png"
    },
    "mac": {
      "hardenedRuntime": true,
      "appId": "cn.heisir.m3u8-downloader-mac",
      "category": "public.app-category.productivity",
      "target": [
        "dmg"
      ],
      "extraResources": [
        "node_modules/ffmpeg-static/ffmpeg"
      ],
      "icon": "resource/icon/logo.icns"
    },
    "nsis": {
      "perMachine": true,
      "oneClick": false,
      "allowElevation": true,
      "allowToChangeInstallationDirectory": true,
      "installerIcon": "resource/icon/logo.ico",
      "uninstallerIcon": "resource/icon/logo.ico",
      "installerHeaderIcon": "resource/icon/logo.ico",
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "M3U8-Downloader"
    },
    "appImage": {
      "category": "public.app-category.productivity"
    },
    "linux": {
      "maintainer": "heisir <heisir21@163.com>",
      "icon": "./resource/icon",
      "category": "public.app-category.productivity"
    }
  },
  "author": {
    "name": "heisir",
    "email": "heisir21@163.com",
    "qq": "1586462"
  },
  "license": "MIT"
}
